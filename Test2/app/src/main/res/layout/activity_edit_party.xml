<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.test.test2.EditParty">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Party Name:"
        android:id="@+id/PartyNameTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alcohol:"
        android:id="@+id/AlcoholTextView"
        android:layout_marginTop="58dp"
        android:layout_below="@+id/PartyNameTextView"
        android:layout_alignRight="@+id/PartyNameTextView"
        android:layout_alignEnd="@+id/PartyNameTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location:"
        android:id="@+id/location"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/PartyNameTextView"
        android:layout_alignRight="@+id/PartyNameTextView"
        android:layout_alignEnd="@+id/PartyNameTextView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/PartyNameET"
        android:text="hello"
        android:ems="5"
        android:inputType="text"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/AlcoholTextView"
        android:layout_toEndOf="@+id/AlcoholTextView"
        android:layout_marginBottom="430dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:text="Give me your Location"
        android:id="@+id/LocationEdit"
        android:layout_below="@+id/PartyNameTextView"
        android:layout_toRightOf="@+id/location" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alcohol_list"
        android:layout_below="@+id/LocationEdit"
        android:layout_toRightOf="@+id/AlcoholTextView"
        android:layout_toEndOf="@+id/AlcoholTextView"
        android:prompt="@string/Alcohol_prompt"
        android:entries="@array/Alcohol"

        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="322dp"
        android:layout_marginLeft="267dp"
        android:layout_marginBottom="89dp"
        android:id="@+id/imageView3"
        android:src="@drawable/kurt"
        android:layout_alignBottom="@+id/alcohol_list" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apply"
        android:id="@+id/button7"
        android:layout_below="@+id/alcohol_list"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10"
        />


</RelativeLayout>
